root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
charset = utf-8
insert_final_newline = false

[*.{py,sh,feature}]
max_line_length = 80
indent_size = 4

# Tabs

[*.{go,less,css}]
indent_style = tab

[Vagrantfile]
indent_style = tab

[Makefile]
indent_style = tab

# indent_size

[*.{go}]
indent_size = 4

[README.md]
max_line_length = 80
